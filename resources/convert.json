{
  "openapi": "3.0.0",
  "info": {
    "title": "Exchange Rate API",
    "version": "1.0.0"
  },
  "paths": {
    "/v4/latest/{base}": {
      "get": {
        "summary": "Get latest exchange rates for a base currency",
        "operationId": "getExchangeRates",
        "parameters": [
          {
            "name": "base",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Base currency code (e.g., EUR)"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "base": {
                      "type": "string"
                    },
                    "date": {
                      "type": "string"
                    },
                    "rates": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://api.exchangerate-api.com"
    }
  ]
}
